<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <!--Инициализация Spring PostProcessors-->
    <context:annotation-config/>

    <bean id="morpheus" class="matrix.Morpheus">
        <property name="pill" ref="pill"/>
    </bean>

    <bean id="pill" class="matrix.Pill">
        <constructor-arg name="colour" value="red"/>
    </bean>

    <bean id="trinity" class="matrix.Trinity"/>

    <bean id="neo" class="matrix.Anderson"/>

</beans>